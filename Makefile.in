PACKAGE = @PACKAGE@
VERSION = @VERSION@
utildir = @PUBRULE@
appname = @APPNAME@
pubdir = @prefix@
srcdir = @srcdir@
applib = WHAT

export pubdir utildir appname applib

TAR = gtar
GZIP_ENV = --best

export targetdir PACKAGE

SUBDIR = Class

pages_not_xml = info.xml
pages_not_php = fam2po.php po2js.php

include $(utildir)/PubRule

DISTFILES += $(SUBDIR) \
            RELEASE VERSION 

$(pubdir)/$(appname): $(pubdir)
	mkdir -p $(pubdir)/$(appname)

$(pubdir)/$(appname)/.htaccess: htaccess $(pubdir)/$(appname)
	cp $< $@

$(pubdir)/programs: $(pubdir)
	mkdir -p $(pubdir)/programs

$(pubdir)/programs/phpcas_install: programs/phpcas_install $(pubdir)/programs
	cp $< $@

publish: $(pubdir)/$(appname)/.htaccess $(pubdir)/programs/phpcas_install
