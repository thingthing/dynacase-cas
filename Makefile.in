PACKAGE = @PACKAGE@
VERSION = @VERSION@
utildir = @PUBRULE@
appname = @APPNAME@
pubdir = @prefix@
srcdir = @srcdir@
applib = WHAT

CAS_TGZ = CAS-1.0.1.tgz

export pubdir utildir appname applib

TAR = gtar
GZIP_ENV = --best

export targetdir PACKAGE

SUBDIR = Class

pages_not_xml = info.xml
pages_not_php = fam2po.php po2js.php

include $(utildir)/PubRule

DISTFILES += $(SUBDIR) \
            RELEASE VERSION 

$(pubdir)/$(appname): $(pubdir)
	mkdir -p $(pubdir)/$(appname)

$(pubdir)/$(appname)/CAS.php: $(pubdir)/$(appname) $(CAS_TGZ)
	tar -C $(pubdir)/$(appname) --strip-components 1 -zxf $(CAS_TGZ) CAS-1.0.1/CAS.php

$(pubdir)/$(appname)/CAS: $(pubdir)/$(appname) $(CAS_TGZ)
	tar -C $(pubdir)/$(appname) --strip-components 1 -zxf $(CAS_TGZ) CAS-1.0.1/CAS

publish: $(pubdir)/$(appname)/CAS.php $(pubdir)/$(appname)/CAS
